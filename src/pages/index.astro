<style>
    * {
        font-family: monospace ;
    }
    .typewriter h1 {
        font-family: monospace; /* Fuente estilo máquina de escribir */
        white-space: pre-wrap; /* Permite saltos de línea */
        word-wrap: break-word; /* Evita que el texto se desborde */
        overflow: hidden; /* Oculta el texto que aún no se ha "escrito" */
    }

    /* Animación de aparición */
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    /* Animaciones personalizadas que puedes usar con Tailwind */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fadeIn {
        animation: fadeIn 0.8s ease forwards;
    }

    .delay-150 {
        animation-delay: 0.15s;
    }

    .delay-300 {
        animation-delay: 0.3s;
    }

</style>

<script>
    // JavaScript para el efecto de aparición escalonada
    const text = document?.getElementById("typewriter-text")?.innerText ?? ""; // Obtenemos el texto
    if (!text) return; // Si no hay texto, no ejecutar el script
    document.getElementById("typewriter-text").innerHTML = ""; // Limpiamos el texto

    let i = 0;
    const speed = 25; // Velocidad en milisegundos (ajusta según prefieras)

    function typeWriter() {
        if (i < text.length) {
            const span = document.createElement("span");
            span.textContent = text.charAt(i);
            span.style.opacity = "0";
            span.style.animation = `fadeIn 0.5s ${i * speed}ms forwards`;
            document.getElementById("typewriter-text")?.appendChild(span);
            i++;
            setTimeout(typeWriter, speed);
        }
    }

    typeWriter(); // Inicia la animación
</script>
