---
import HeaderLink from './HeaderLink.astro';
---
<header>
    <nav class="py-6 relative">
        <div class="flex container mx-auto w-11/12 px-8 xl:px-5 ">
            <!-- Logo -->
            <div class="flex flex-grow">
                <img  src="/assets/images/logo_navbar.webp" alt="LOGO DE ASCENT" class="w-25 h-9"/>
            </div>


            <div class="lg:hidden" onclick="toggleMenu()">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                     stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"/>
                </svg>
            </div>

            <!-- Navigation Links -->
            <div id="menu" class="lg:flex hidden flex-grow justify-between absolute lg:relative top-20 lg:top-0  left-0 z-10 lg:z-0 py-4 lg:py-0 px-8 lg:px-0 shadow-lg lg:shadow-none w-full lg:w-auto bg-white lg:bg-transparent">
                    <ul class="flex md:flex-row flex-col md:items-center gap-[4vw]">
                        <li>
                            <HeaderLink href="/">Inicio</HeaderLink>
                        </li>
                        <li>
                            <HeaderLink href="/services">Servicios</HeaderLink>
                        </li>
                        <li>
                            <HeaderLink href="/portfolio">Blog</HeaderLink>
                        </li>
                        <li>
                            <HeaderLink href="/about">Acerca de m√≠</HeaderLink>
                        </li>
                    </ul>
                <div class="flex flex-col md:flex-row  gap-4 md:gap-8 text-center mt-3 lg:mt-0">
                    <a href="/contact"
                       class="border border-black px-4 py-2 rounded hover:bg-black hover:text-white transition duration-300 ease-in-out">
                        Contactar
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<script is:inline>
    const toggleMenu = () => {
        const menu = document.getElementById('menu');
        menu.classList.toggle('hidden');
    }
</script>



