---
import Nav from "./common/Nav.astro";
---
<header class="bg-black text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
            <!-- Logo (izquierda) -->
            <div class="flex-shrink-0 flex items-center">
                <a href="/">
                    <img class="h-8 w-auto" src="/assets/images/ASCENT_WHITE_Large.png" alt="Logo">
                </a>
            </div>

            <!-- Botón de menú móvil -->
            <div class="flex sm:hidden">
                <button type="button" id="mobile-menu-button"
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none">
                    <span class="sr-only">Abrir menú principal</span>
                    <!-- Icono del menú -->
                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                    <!-- Icono para cerrar -->
                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <!-- Enlaces de navegación (centro) - Visible en pantallas medianas y grandes -->
            <Nav />

            <!-- Botón CTA (derecha) -->
            <div class="hidden sm:flex items-center">
                <a href="https://wa.me/77741348126?text=Hola,%20estoy%20interesado%20en%20servicios" target="_blank" rel="noopener noreferrer"
                   class="flex items-center gap-2 bg-transparent border-2 border-green-500 text-green-400 hover:bg-green-600 hover:text-white px-5 py-2 rounded-full font-semibold shadow-lg transition duration-300 focus:outline-none focus:ring-2 focus:ring-green-400">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="w-5 h-5">
                        <path d="M20.52 3.48A12 12 0 0 0 3.48 20.52a12 12 0 0 0 17.04-17.04zm-8.52 17.02a9.01 9.01 0 0 1-4.59-1.25l-.33-.19-3.41.9.91-3.32-.21-.34A9.01 9.01 0 1 1 12 20.5zm5.2-6.18c-.29-.15-1.7-.84-1.96-.94-.26-.1-.45-.15-.64.15-.19.29-.74.94-.91 1.13-.17.19-.34.21-.63.07-.29-.15-1.23-.45-2.34-1.43-.86-.77-1.44-1.72-1.61-2.01-.17-.29-.02-.45.13-.6.13-.13.29-.34.43-.51.14-.17.19-.29.29-.48.1-.19.05-.36-.02-.51-.07-.15-.64-1.54-.88-2.11-.23-.56-.47-.48-.64-.49-.17-.01-.36-.01-.56-.01-.19 0-.5.07-.76.36-.26.29-1 1-.99 2.43.01 1.43 1.03 2.81 1.18 3.01.15.19 2.03 3.1 4.93 4.22.69.3 1.23.48 1.65.61.69.22 1.32.19 1.81.12.55-.08 1.7-.7 1.94-1.37.24-.67.24-1.25.17-1.37-.07-.12-.26-.19-.55-.34z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>

    <!-- Menú móvil, visible solo en pantallas pequeñas -->
    <div class="sm:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="#" class="text-gray-900 hover:bg-gray-100 block px-3 py-2 rounded-md font-medium">Inicio</a>
            <a href="#" class="text-gray-500 hover:bg-gray-100 block px-3 py-2 rounded-md font-medium">Servicios</a>
            <a href="#" class="text-gray-500 hover:bg-gray-100 block px-3 py-2 rounded-md font-medium">Productos</a>
            <a href="https://wa.me/77741348126?text=Hola,%20estoy%20interesado%20en%20servicios" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:bg-gray-100 block px-3 py-2 rounded-md font-medium">Contacto</a>

            <!-- Botón CTA en modo móvil -->
            <div class="mt-4">
                <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Comenzar
                </button>
            </div>
        </div>
    </div>
</header>

<script type="module">
    // JavaScript para controlar el menú móvil
    document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = mobileMenuButton.querySelector('svg:first-child');
        const closeIcon = mobileMenuButton.querySelector('svg:last-child');

        mobileMenuButton.addEventListener('click', () => {
            const isMenuOpen = mobileMenu.classList.toggle('hidden');

            menuIcon.classList.toggle('hidden', !isMenuOpen);
            closeIcon.classList.toggle('hidden', isMenuOpen);
        });
    });
</script>
